<h3> My Rides </h3>
<table border="1" cellpadding="3">
  <tr>
    <th>From City</th>
    <th>To City</th>
    <th>Departure date</th>
    <th>Departure time</th>
    <th>Flexibility</th>
    <th>Duration</th>
    <th>Vehicle Type</th>
    <th>Available Seats</th>
    <th>Price per Seat</th>
    <th>Notes</th>
  </tr>
  <%@rides.each do |ride| %>
    <tr align="center">
      <td><%= ride.from_city %></td>
      <td><%= ride.to_city %></td>
      <td><%= ride.departure_date %></td>
      <td><%= ride.departure_time %></td>
      <td><%= ride.flexibility %></td>
      <td><%= ride.duration %></td>
      <td><%= ride.ride_type %></td>
      <td><%= ride.available_seats%></td>
      <td><%= ride.price_per_seat%></td>
      <td><%= ride.notes%></td>
    </tr>
  <%end%>
</table>
<br/>
<%= link_to 'New Ride', new_ride_path %>