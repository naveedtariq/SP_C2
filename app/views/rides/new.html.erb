<%= form_for :ride, :url => root_url do |f| %>
  <div class="field">
    <%= f.label :type %>
    <%= f.text_field :type %>
  </div>
  <div class="field">
    <%= f.label :min_seats %>
    <%= f.text_field :min_seats %>
  </div>
  <div class="field">
    <%= f.label :max_seats %>
    <%= f.text_field :max_seats %>
  </div>
  <div class="field">
    <%= f.label :price_per_seat %>
    <%= f.text_field :price_per_seat %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_time %>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :arrival_time %>
    <%= f.time_select :arrival_time %>
  </div>
  <div class="field">
    <%= f.label :flexibility %>
    <%= f.text_field :flexibility %>
  </div>
  <%= fields_for :location do |location_form| %>

    <div class="field">
      <%= location_form.label :name %>
      <%= location_form.text_field :name %>
    </div>
    <div class="field">
      <%= location_form.label :address1 %>
      <%= location_form.text_field :address1 %>
    </div>
    <div class="field">
      <%= location_form.label :address2 %>
      <%= location_form.text_field :address2 %>
    </div>
    <div class="field">
      <%= location_form.label :country  %>
      <%= location_form.text_field :country %>
    </div>
    <div class="field">
      <%= location_form.label :city %>
      <%= location_form.text_field :city %>
    </div>
    <div class="field">
      <%= location_form.label :state %>
      <%= location_form.text_field :state %>
    </div>
    <div class="field">
      <%= location_form.label :zip %>
      <%= location_form.text_field :zip %>
    </div>
  <% end %>
  <p><%= submit_tag "Create Ride" %></p>
<% end %>