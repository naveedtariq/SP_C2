<a href="<%=user_path(@ride.owner)%>"><%= @ride.owner && "#{@ride.owner.full_name}" %> </a> |
<a href="<%=new_ride_ride_participant_path(@ride.id)%>"><%= @ride.to_location && @ride.to_location.name %>&nbsp;on&nbsp;<%=@ride.departure_date %></a>
<br/><%= image_tag @ride.owner.user_image_url %>
<div class="message-box">
  <%=  form_for Feedback.new, :url => feedback_path do |f| %>
    <table>
      <tr>
        <td>
          <%= f.radio_button :status, 'thumbs_up'%>
        </td>
        <td>
          <%= f.label :status, 'thumbs_up', :for => 'feedback_status_thumbs_up' %>
        </td>
        <td>
          <%= f.radio_button :status, 'thumbs_down' %>
        </td>
        <td>
          <%= f.label :status, 'thumbs_down', :for => 'feedback_status_thumbs_down' %>
        </td>
        <td>
          <%= f.radio_button :status , 'nutrel' %>
        </td>
        <td>
          <%= f.label :status, 'nutrel', :for => 'feedback_status_nutrel' %>
        </td>
      </tr>
    </table>
    <div class="field">
      <%= f.label :feedback %>
      <%= f.text_area :feedback%>
      <%= f.hidden_field :ride_id, :value =>(@ride.id) %>
      <%= f.hidden_field :owner_id, :value =>(@ride.owner.id) %>
    </div>
    <%= f.submit "Send"%>
  <hr/>
  <%end%>
</div>